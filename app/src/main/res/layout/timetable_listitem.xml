<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android" />
    <android.support.v7.widget.CardView
        android:id="@+id/sehricontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingTop="@dimen/default_cardViewPadding"
        android:paddingBottom="@dimen/default_cardViewPadding"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="80dp"

            android:background="@drawable/fab_circle_red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:textAlignment="center"
            android:padding="50dp"


            android:layout_height="80dp"
            android:id="@+id/textView5" />
        <TextView
            android:id="@+id/tv_main_date"
            android:layout_width="match_parent"

            android:text="1"

            android:textAlignment="center"

            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/main_white"


            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_toStartOf="@+id/tv_sehri_time"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sehri Time"
            android:textColor="@color/assent"
            android:textSize="20sp"
            android:id="@+id/label_sehritime"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iftari Time"
            android:id="@+id/textView6"
            android:textColor="@color/main_teal"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/label_sehritime"
            android:layout_toRightOf="@+id/label_sehritime"
            android:layout_alignBottom="@+id/label_sehritime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:05"
            android:textSize="20sp"
            android:id="@+id/tv_sehri_time"
            android:textColor="@color/assent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:35"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/main_teal"
            android:id="@+id/tv_iftari_time"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="@color/main_white"
            android:id="@+id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:id="@+id/textView8"
            android:textSize="15sp"
            android:textColor="@color/main_text_color"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/label_sehritime"
            android:layout_alignEnd="@+id/label_sehritime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="15sp"
            android:id="@+id/tv_chris_date"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />


    </RelativeLayout>
</android.support.v7.widget.CardView>


</FrameLayout>