<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scrollView_detail"
        android:layout_width="match_parent"

        
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView


                    android:layout_width="fill_parent"
                    android:src="@drawable/header_bg"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/detail_header_image_Height"
                    android:id="@+id/header_imageView" />

            <com.rey.material.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp"
                app:fab_backgroundColor="@color/assent"
                app:fab_iconSrc="@drawable/ic_pencil_white"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="215dp"
                android:id="@+id/view" />
            <android.support.v7.widget.CardView
                android:id="@+id/sehricontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="left|center_vertical"
                android:layout_below="@+id/header_imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sehri"
                        android:textStyle="bold"
                        android:textColor="@color/assent"
                        android:textSize="25sp"
                        android:id="@+id/tv_sehri"
                        android:layout_marginLeft="15dp"
                        android:layout_alignTop="@+id/tv_Time_sehri"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textStyle="bold"
                        android:textColor="@color/assent"
                        android:textSize="25sp"


                        android:layout_alignBaseline="@+id/tv_sehri"
                        android:layout_alignBottom="@+id/tv_sehri"
                        android:layout_toRightOf="@+id/tv_sehri"
                        android:layout_toEndOf="@+id/tv_sehri"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/tv_equel" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ညနေ ၆:၄၅ "
                        android:textStyle="bold"
                        android:textColor="@color/assent"
                        android:textSize="20sp"
                        android:layout_marginLeft="11dp"
                        android:id="@+id/tv_Time_sehri"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_equel"
                        android:layout_toEndOf="@+id/tv_equel"
                        android:layout_marginStart="11dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="left|center_vertical"
                android:layout_below="@+id/sehricontainer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iftari"
                android:textStyle="bold"
                android:textColor="@color/main_teal"
                android:textSize="25sp"
                    android:id="@+id/textView"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textStyle="bold"
                    android:textColor="@color/main_teal"
                    android:textSize="25sp"


                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/textView3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ညနေ ၆:၄၅ "
                    android:textStyle="bold"
                    android:textColor="@color/main_teal"
                    android:textSize="20sp"
                    android:layout_marginLeft="11dp"
                    android:id="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_marginStart="11dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="၁"
                android:id="@+id/date_count"
                android:textSize="75sp"
                android:textColor="@color/main_white"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/sehricontainer"
                android:layout_alignStart="@+id/sehricontainer"
                android:layout_marginTop="82dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ရက်"

                android:textSize="75sp"
                android:textColor="@color/main_white"
                android:layout_alignTop="@+id/date_count"
                android:layout_toRightOf="@+id/date_count"
                android:layout_toEndOf="@+id/date_count"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp" />

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        app:theme="@style/ToolbarCustomIconColor"

        app:popupTheme="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"

        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/title_action2"
            android:layout_width="wrap_content"

            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>



</FrameLayout>
